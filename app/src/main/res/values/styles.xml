<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>
    
    <style name="ButtonMainStyle">
        <item name="android:background">@drawable/button_main_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

</resources>
